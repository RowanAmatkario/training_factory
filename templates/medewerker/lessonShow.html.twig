{% extends 'admin.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="container" style="margin-top: 2%;">
        <h3 style="text-align: center; margin-bottom: 3%;">Training</h3>

        <table class="table">
            <tbody>
            <tr>
                <th>Datum</th>
                <td>{{ lesson.Date|date('j F, Y') }}</td>
            </tr>
            <tr>
                <th>Tijd</th>
                <td>{{ lesson.Time|date('h:i') }}</td>
            </tr>
            <tr>
                <th>Locatie</th>
                <td>{{ lesson.location }}</td>
            </tr>
            </tbody>

        </table>
        <a href="{{ path('agenda') }}">Terug</a>
    </div>

{% endblock %}