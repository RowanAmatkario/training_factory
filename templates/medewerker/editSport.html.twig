{% extends 'base.html.twig' %}
{% block body %}
    {{ parent() }}

    <div class="container" style="margin-top: 2%;">

        <h2 style="text-align: center;">Trainingen bewerken</h2>
        <table class="table table-borderless">
            <thead>
            <tr>
                <th>Training</th>
                <th>Looptijd</th>
                <th>Tarief</th>
                <th>Kies</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
            <tr>
                <td>
                    {{ post.naam }}
                </td>

                <td>
                    {{ post.duration }}
                </td>
                <td>
                    {{ post.costs }}
                </td>
                <td>
                    <button type="button" class="btn btn-outline-primary"><a href="modify/{{ post.id }}">Wijzigen</a></button>
                    <button type="button" class="btn btn-outline-primary"><a href="modify/{{ post.id }}">Verwijderen</a></button>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <button type="button" class="btn btn-outline-primary"><a href="{{ path('add') }}">Training Toevoegen</a></button>
    </div>


{% endblock %}







