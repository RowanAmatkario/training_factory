<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %} Training Centrum Den Haag{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
              integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('/css/font-awesome.css') }}">
        <link rel="stylesheet" href="{{ asset('index.css') }}">
    {% endblock %}
    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    {% endblock %}
</head>
<body>
{% block body %}

    <img src="{{ asset('image/header.webp') }}" alt="logo" style="width:150px; float: left;">
    <h1>Training Centrum <br>Den Haag</h1>




    <div class="button">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <button type="button" class="btn btn-light" style="margin-right: 5px;"> <a href="{{ path ('app_logout') }}">Uitloggen</a></button>
        {% else %}
            <button type="button" class="btn btn-light" style="margin-right: 5px;"> <a href="{{ path ('login') }}">Inloggen</a></button>
        {% endif %}

        <button type="button" class="btn btn-light">Reset Wachtwoord</button>
    </div>



    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-top: 3%;" >
        <a class="navbar-brand" href="#">
            <img src="{{ asset('image/logo.jpg') }}" alt="logo" style="width:50px;">
        </a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('homepage') }}">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('kartactiviteiten') }}">Lessen Plannen</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('leden')  }}">Lessen Beheren</a>
            </li>

        </ul>
    </nav>
{% endblock %}

{% block footer %}

{% endblock %}

</body>
</html>









