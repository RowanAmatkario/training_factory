            <img src="image/logo.jpg" alt="logo" style="width:50px;">
        </a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Trainings aanbod</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Lid worden</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Gedragregels</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Locatie & Contact</a>
            </li>
        </ul>
    </nav>

{% endblock %}

{% block footer %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-top: 5%;">
        <a class="navbar-brand" href="#">
            <img src="image/logo.jpg" alt="logo" style="width:50px;">
        </a>

